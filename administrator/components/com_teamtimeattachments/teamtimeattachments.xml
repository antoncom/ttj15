<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>TeamTime Attachments</name>
	<author>teamtime.info</author>
	<creationDate>2012-07-11</creationDate>
	<copyright>based on Teamlog beta 0.9.2 component for Joomla from yootheme.com copyright Copyright (C) 2008 YOOtheme Ltd. &amp; Co. KG. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2 only</license>
	<authorEmail>info@teamtime.info</authorEmail>
	<authorUrl>teamtime.info</authorUrl>
	<version>0.9.2 BETA</version>
	<description>TeamTime Attachments for upload files.</description>
	
	<installfile>installation/install.eventlist.php</installfile>
	<uninstallfile>installation/uninstall.eventlist.php</uninstallfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">installation/install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">installation/uninstall.sql</file>
		</sql>
	</uninstall>

	<languages folder="frontend/language">
		<language tag="en-GB">en-GB.com_teamtimeattachments.ini</language>
		<language tag="ru-RU">ru-RU.com_teamtimeattachments.ini</language>
	</languages>

	<files folder="frontend">
		<filename>teamtimeattachments.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>views</folder>				
	</files>

	<media folder="media" destination="com_teamtimeattachments">
		<filename>index.html</filename>
		<folder>assets</folder>
	</media>

	<administration>
		<!--menu img="components/com_teamtimeattachments/assets/images/teamtimeattachments-16.png">TeamTime Attachments</menu>
		<submenu>
			<menu link="option=com_teamtimeattachments&amp;controller=controlpanel">Control Panel</menu>			
		</submenu-->
		
		<languages folder="administrator/language">
			<language tag="en-GB">en-GB.com_teamtimeattachments.ini</language>
			<language tag="ru-RU">ru-RU.com_teamtimeattachments.ini</language>
		</languages>

		<files folder="administrator">
			<filename>changelog.php</filename>
			<filename>teamtimeattachments.php</filename>
			<filename>index.html</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>installation</folder>
			<folder>library</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>			
		</files>
	</administration>
</install>
