<?xml version="1.0" ?>
<install version="1.5.0" type="plugin" plugin="hsexpander">
	<name>Highslide Expander</name>
	<version>2.0.0</version>
	<creationDate>Apr 2009</creationDate>
	<author>Ken Lowther</author>
	<authorEmail>admin@joomlanook.com</authorEmail>
	<authorUrl>http://www.joomlanook.com</authorUrl>
	<copyright>Ken Lowther</copyright>
	<license>GPL</license>
	<description><![CDATA[
	<p>HsExpander 2.0.0</p>
	<p>Enhanced to support Highslide version 4.</p>
	]]></description>
	<icon>hsexpander</icon>
	<layout>hsexpander</layout>
	<elements></elements>
	<files>
		<filename>editor_plugin.js</filename>
		<filename>hsexpander.php</filename>
        <filename>css/hsexpander.css</filename>
        <filename>css/index.html</filename>
        <filename>img/hsexpander.gif</filename>
        <filename>img/index.html</filename>
        <filename>index.html</filename>
        <filename>js/hsexpander.js</filename>
        <filename>js/index.html</filename>
        <filename>langs/en_dlg.js</filename>
        <filename>langs/en.js</filename>
        <filename>langs/index.html</filename>
	</files>
	<variables></variables>
	<params group="defaults">
		<param name="hsexpander_target" type="list" default="_self" label="PARAM DEFAULT TARGET" description="PARAM DEFAULT TARGET DESC">
        	<option value="_self">_self</option>
			<option value="_blank">_blank</option>
			<option value="_parent">_parent</option>
			<option value="_top">_top</option>
		</param>
	</params>
	<params group="access">
        <param name="hsexpander_article" type="list" default="1" label="PARAM ARTICLE ACCESS" description="PARAM ARTICLE ACCESS DESC">
           	<option value="1">YES</option>
           	<option value="0">NO</option>
		</param>
		<param name="hsexpander_section" type="list" default="1" label="PARAM SECTION ACCESS" description="PARAM SECTION ACCESS DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="hsexpander_category" type="list" default="1" label="PARAM CATEGORY ACCESS" description="PARAM CATEGORY ACCESS DSEC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="hsexpander_static" type="list" default="1" label="PARAM STATIC ACCESS" description="PARAM STATIC ACCESS DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
		</param>
		<param name="hsexpander_contact" type="list" default="1" label="PARAM CONTACT ACCESS" description="PARAM CONTACT ACCESS DESC">
           	<option value="1">YES</option>
            <option value="0">NO</option>
		</param>
    </params>
	<languages>
		<language tag="en-GB">en-GB.com_jce_hsexpander.ini</language>
	</languages>
	<help>
		<topic key="hsexpander.about" title="Help About" />
		<topic key="hsexpander.interface" title="Help Interface" />
		<topic key="hsexpander.content" title="Help Links" />
		<topic key="hsexpander.events" title="Help Events" />
		<topic key="hsexpander.advanced" title="Help Advanced" />
		<topic key="hsexpander.insert" title="Help Insert" />
		<topic key="hsexpander.email" title="Help Email" />
	</help>
</install>